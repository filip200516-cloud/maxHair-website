ded', forceWhiteBg);\n  window.addEventListener('load', forceWhiteBg);\n  setTimeout(forceWhiteBg, 100);\n  setTimeout(forceWhiteBg, 500);\n  setTimeout(forceWhiteBg, 2000);\n\n  /* --- Lock hero height once on load, then never update (stops mobile browser UI resize) --- */\n  (function(){\n    function lockHeroHeight(){\n      var vh = window.innerHeight;\n      document.documentElement.style.setProperty('--mh-locked-vh', vh + 'px');\n      window.__mhLockedVh = vh;\n    }\n    lockHeroHeight();\n    if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', lockHeroHeight);\n    window.addEventListener('orientationchange', function(){ setTimeout(lockHeroHeight, 100); });\n  })();\n\n  /* --- Scroll-hide header (iOS Safari optimized) --- */\n  var lastScroll = 0;\n  var scrollThreshold = 15; /* increased from 5 for reliable touch detection */\n  function handleScroll() {\n    var navEl = header.querySelector('.header-nav');\n    if (navEl && navEl.classList.contains('mobile-open')) return;\n    var currentScroll = window.pageYOffset || document.documentElement.scrollTop;\n    if (currentScroll < 0) currentScroll = 0;\n    if (currentScroll <= 10) {\n      header.classList.remove('header-hidden');\n      lastScroll = currentScroll;\n      return;\n    }\n    if (currentScroll > lastScroll + scrollThreshold) {\n      header.classList.add('header-hidden');\n      lastScroll = currentScroll;\n    } else if (currentScroll < lastScroll - scrollThreshold) {\n      header.classList.remove('header-hidden');\n      lastScroll = currentScroll;\n    }\n  }\n\n  /* IntersectionObserver: primary iOS-reliable scroll detection */\n  if ('IntersectionObserver' in window) {\n    var sentinel = document.createElement('div');\n    sentinel.style.cssText = 'position:absolute;top:80px;height:1px;width:100%;pointer-events:none;';\n    sentinel.setAttribute('aria-hidden', 'true');\n    document.body.prepend(sentinel);\n    var observer = new IntersectionObserver(function(entries) {\n      var navEl = header.querySelector('.header-nav');\n      if (navEl && navEl.classList.contains('mobile-open')) return;\n      if (entries[0].isIntersecting) {\n        header.classList.remove('header-hidden');\n      } else {\n        header.classList.add('header-hidden');\n      }\n    }, { threshold: 0 });\n    observer.observe(sentinel);\n  }\n\n  /* Scroll listener fallback (all browsers) */\n  var ticking = false;\n  window.addEventListener('scroll', function() {\n    if (!ticking) {\n      window.requestAnimationFrame(function() {\n        handleScroll();\n        ticking = false;\n      });\n      ticking = true;\n    }\n  }, { passive: true });\n\n  /* --- Mobile menu with scroll-lock & close behaviors (BUG-01 FIX) --- */\n  var toggle = document.getElementById('mobile-menu-toggle');\n  var nav = header.querySelector('.header-nav');\n\n  function closeMenu() {\n    if (!nav || !toggle) return;\n    nav.classList.remove('mobile-open');\n    nav.querySelectorAll('.nav-item-dropdown.expanded').forEach(function(el) { el.classList.remove('expanded'); });\n    toggle.classList.remove('active');\n    document.body.style.overflow = '';\n    document.body.style.position = '';\n    document.body.style.width = '';\n    document.body.style.top = '';\n    document.documentElement.style.overflow = '';\n    toggle.setAttribute('aria-label', 'Otevřít menu');\n    var scrollY = document.body.dataset.scrollY;\n    if (scrollY !== undefined) {\n      requestAnimationFrame(function() {\n        window.scrollTo(0, parseInt(scrollY, 10));\n      });\n      delete document.body.dataset.scrollY;\n    }\n  }\n\n  function openMenu() {\n    if (!nav || !toggle) return;\n    document.body.dataset.scrollY = String(window.scrollY);\n    nav.classList.add('mobile-open');\n    toggle.classList.add('active');\n    document.body.style.overflow = 'hidden';\n    document.body.style.position = 'fixed';\n    document.body.style.width = '100%';\n    document.body.style.top = '-' + window.scrollY + 'px';\n    document.documentElement.style.overflow = 'hidden';\n    toggle.setAttribute('aria-label', 'Zavřít menu');\n    header.classList.remove('header-hidden');\n  }\n\n  if (toggle && nav) {\n    toggle.addEventListener('click', function(e) {\n      e.preventDefault();\n      e.stopPropagation();\n      if (nav.classList.contains('mobile-open')) {\n        closeMenu();\n      } else {\n        openMenu();\n      }\n    });\n\n    nav.querySelectorAll('a').forEach(function(link) {\n      link.addEventListener('click', function(e) {\n        var parent = link.closest('.nav-item-dropdown');\n        if (parent && link.classList.contains('nav-link') && !link.classList.contains('dropdown-link')) {\n          e.preventDefault();\n          parent.classList.toggle('expanded');\n          return;\n        }\n        closeMenu();\n      });\n    });\n\n    document.addEventListener('keydown', function(e) {\n      if (e.key === 'Escape' && nav.classList.contains('mobile-open')) {\n        closeMenu();\n      }\n    });\n\n    nav.addEventListener('click', function(e) {\n      if (e.target === nav) {\n        closeMenu();\n      }\n    });\n  }\n})();\n</script>",
